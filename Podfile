source 'https://github.com/CocoaPods/Specs.git'
platform :ios, '10.0'

target 'Flickery' do
  # Comment this line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!
    # Pods for Flickery
    
    # Networking
    pod 'Alamofire', '~> 4.0'
    # library for loading images
    pod 'Nuke', '~> 4.0'
    # SKPhotoBrowser Swift3.0
    pod 'SKPhotoBrowser', :git => 'https://github.com/suzuki-0000/SKPhotoBrowser.git', :branch => 'swift3'
    # UICollectionViewLayout with focused content
    pod "HanabiCollectionViewLayout", :git => 'https://github.com/kshin/Hanabi'



  target 'FlickeryTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'FlickeryUITests' do
    inherit! :search_paths
    # Pods for testing
  end

end
